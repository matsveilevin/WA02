<mvc:View
   controllerName="courses.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Button
      text="{i18n>showHelloButtonText}"
      press=".onShowHello"/>
   <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}, I've come to talk with you again "
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>